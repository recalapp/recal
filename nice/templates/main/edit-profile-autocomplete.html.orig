  #class-label {
    display: block;
    font-weight: bold;
    margin-bottom: 1em;
  }
  #class-description {
    margin: 0;
    padding: 0;
  }
  
  .ui-autocomplete {
    max-height: 150px;
    overflow-y: auto;
    /* prevent horizontal scrollbar */
