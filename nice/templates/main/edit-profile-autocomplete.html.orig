{% extends 'main/base.html' %}
{% load staticfiles %}

{% block title %}Edit Profile{% endblock %}

{% block main_content %}
{% include 'main/sidebar.html' %}
<div class="container-fluid">
    <div id="profHeader" class="theme row">

        <div class="col-xs-9">
            <div class="row">
                <div class="col-xs-6">
                    <h3>Your Classes and Profile</h3>
                </div>
                <div class="col-xs-6" id="profile-control">
                    <a href="/" class="white-link-btn theme">
                        Go To Dashboard &rarr;
                    </a>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-7">
            <h2>Preview:</h2>
            <div id="calendarui" class="theme"></div>
        </div>
        <div class="col-xs-2" >
            <h2>Enrolled:</h2>
            <div class="row" id="course-list">
                <h4>Loading your courses...</h4>
            </div>
        </div>
    </div>
    <br>
    <div id="search" class="row">
        <div class="col-xs-2">
            <label for="class">Start typing a class...</label>
        </div>
        <div class="col-xs-7">
            <input id="class" class="form-control" placeholder="e.g. 'COS', 'PHY 105', 'Introduction to Metaphysics'">
            <input type="hidden" id="class-id">
            <p id="class-description"></p>
        </div>
    </div>

    <div id="userinfo" class="theme row">
        <div class="col-xs-9">
            <div class="row">
                <div class="col-xs-2">
                    <label for="first_name_box">Your Name</label>
                </div>
                <div class="col-xs-3">
                    <input id="first_name_box" type="text" class="form-control" placeholder="First Name">
                    </input>
                </div>
                <div class="col-xs-3">
                    <input id="last_name_box" type="text" class="form-control" placeholder="Last Name">
                    </input>
                </div>

            </div>
        </div>
    </div>


</div> <!-- /#container -->
<div id="content_bounds"></div>
<div id="indicators-container">
</div>
{% endblock %}

